    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        {{>spinner}}
        <!-- Spinner End -->


        <!-- Sidebar Start -->
        {{>sidebar}}
        <!-- Sidebar End -->


        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            {{>navbar}}
            <!-- Navbar End -->

            


            <!-- Match Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-light rounded-top p-4">
                    <div class="row">
                        <div class="col-sm-12 col-xl-12">
                            <div class="bg-light rounded h-100 p-4">
                                <h6 class="mb-4">Manage Players</h6>
                                <div class="m-n2">
                                    <button type="button" class="btn btn-primary m-2"data-bs-toggle="modal" data-bs-target="#create-player">Create Player</button>
                                    <button type="button" class="btn btn-outline-primary m-2">Find Player</button>
                                    <button type="button" class="btn btn-primary m-2">Update Player</button>
                                    <button type="button" class="btn btn-outline-primary m-2">Delete Player</button>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
            <!-- Match End -->
            <!--Modal start-->
            <div class="modal" id="create-player">
                <div class="modal-dialog">
                  <div class="modal-content">
              
                    <!-- Modal Header -->
                    <div class="modal-header">
                      <h4 class="modal-title">Create Player</h4>
                      <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
              
                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="col-sm-12 col-xl-6">
                            <div class="bg-light rounded h-100 p-4">
                                <h6 class="mb-4">Register Football Player</h6>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingFirstName" placeholder="First Name">
                                    <label for="floatingFirstName">First Name</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingLastName" placeholder="Last Name">
                                    <label for="floatingLastName">Last Name</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control" id="floatingEmail" placeholder="name@example.com">
                                    <label for="floatingEmail">Email Address</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="date" class="form-control" id="floatingDOB" placeholder="Date of Birth">
                                    <label for="floatingDOB">Date of Birth</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <select class="form-select" id="floatingPosition" aria-label="Floating label select example">
                                        <option selected>Open this select menu</option>
                                        <option value="Goalkeeper">Goalkeeper</option>
                                        <option value="Defender">Defender</option>
                                        <option value="Midfielder">Midfielder</option>
                                        <option value="Forward">Forward</option>
                                    </select>
                                    <label for="floatingPosition">Position</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingTeam" placeholder="Current Team">
                                    <label for="floatingTeam">Current Team</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="floatingJerseyNumber" placeholder="Jersey Number">
                                    <label for="floatingJerseyNumber">Jersey Number</label>
                                </div>
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingComments" style="height: 150px;"></textarea>
                                    <label for="floatingComments">Comments</label>
                                </div>
                            </div>
                        </div>  
                    </div>
              
                    <!-- Modal footer -->
                    <div class="modal-footer">
                      <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    </div>
              
                  </div>
                </div>
              </div>
              <!--Modal Ends-->


            <!-- Standings Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-light text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">Players</h6>
                        <a href="#">Show All</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-dark">
                                    <th scope="col">No</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Age</th>
                                    <th scope="col">Position</th>
                                    <th scope="col">Team</th>
                                    <th scope="col">Jersey Number</th>
                                    <th scope="col">Games Played</th>
                                </tr>
                            </thead>
                            <tbody>
